<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    tools:context=".activity_infoCard"
    app:cardElevation="5dp"
    app:cardCornerRadius="30dp"
    app:cardUseCompatPadding="true"
    app:contentPadding="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:orientation="vertical">

    <TextView
        android:id="@+id/txtNombreCard"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:text="Titulo"
        android:textColor="#000000"
        android:textSize="25sp" />

        <TextView
            android:id="@+id/txtDescCard"
            android:layout_width="284dp"
            android:layout_height="40dp"
            android:text="Descripcion"
            android:textSize="13sp" />

    <TextView
        android:id="@+id/txtAutorCard"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:text="Autor"
        android:textSize="25sp" />

    <TextView
            android:id="@+id/txtEmailAutorCard"
            android:layout_width="240dp"
            android:layout_height="20dp"
            android:text="Correo"
            android:textSize="15sp" />

    <TextView
        android:id="@+id/txtFechaCreacionCard"
        android:layout_width="120dp"
        android:layout_height="25dp"
        android:layout_marginTop="5dp"
        android:text="FechaCreacion"
        android:textSize="15sp" />

        <TextView
            android:id="@+id/txtEstadoCard"
            android:layout_width="100dp"
            android:layout_height="25dp"
            android:layout_gravity="end"
            android:text="Estado"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="20sp" />

        <TextView
        android:id="@+id/txtFechaFinalizacionCard"
        android:layout_width="120dp"
        android:layout_height="25dp"
        android:layout_gravity="end"
        android:layout_marginTop="5dp"
        android:text="FechaFinalizacion"
        android:textSize="15sp" />

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:orientation="horizontal"
            android:layout_gravity="center">
            <ImageView
                android:id="@+id/imgEditar"
                android:layout_width="50dp"
                android:layout_height="35dp"
                android:layout_weight="0"
                android:layout_marginRight="2dp"
                app:srcCompat="@drawable/editdoc" />

            <ImageView
                android:id="@+id/imgBorrar"
                android:layout_width="50dp"
                android:layout_height="35dp"
                android:layout_weight="0"
                android:layout_marginLeft="2dp"
                app:srcCompat="@drawable/deletedoc" />
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>